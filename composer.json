{
  "name": "gent-drupal/gent_base",
  "homepage": "https://bitbucket.org/digipolisgent/drupal_theme_gent-base",
  "description": "Drupal theming layer for styleguide Gent.",
  "keywords": ["gent", "drupal", "theme"],
  "type": "drupal-theme",
  "license": "GPL-2.0+",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "authors": [
    {
        "name": "Jeroen Goossens",
        "email": "jeroen.goossens@digipolis.gent"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      ".githooks/init.sh",
      "bash -c 'cd ./scripts; ./install.sh;'"
    ],
    "post-update-cmd": [
      ".githooks/init.sh",
      "bash -c 'cd ./scripts; ./install.sh;'"
    ],
    "check-style": [
      "vendor/bin/phpcs --standard=phpcs.xml.dist -p --colors"
    ]
  },
  "require": {
    "drupal/coder": "^8.2"
  }
}
