{#
/**
 * @file
 * Theme override for a fieldset element and its children.
 *
 * Available variables:
 * - attributes: HTML attributes for the fieldset element.
 * - errors: (optional) Any errors for this fieldset element, may not be set.
 * - required: Boolean indicating whether the fieldeset element is required.
 * - legend: The legend element containing the following properties:
 *   - title: Title of the fieldset, intended for use as the text of the legend.
 *   - attributes: HTML attributes to apply to the legend.
 * - information: The information element containing the following properties:
 *   - content: The description content of the fieldset.
 * - description: The description element containing the following properties:
 *   - content: The description content of the fieldset.
 *   - attributes: HTML attributes to apply to the description container.
 * - children: The rendered child elements of the fieldset.
 * - prefix: The content to add before the fieldset children.
 * - suffix: The content to add after the fieldset children.
 *
 * @see template_preprocess_fieldset()
 */
#}
{%
  set classes = [
    'js-form-item',
    'form-item',
    'js-form-wrapper',
    'form-wrapper',
  ]
%}

{% set legend_span_classes = [
  required == 0 ? 'label-optional',
] %}

{%
  set information_classes = ['field-message']
%}

<fieldset{{ attributes.addClass(classes).removeClass('fieldgroup') }}>

  <legend{{ legend.attributes }}>
    {{ legend.title }}
    {% if required == 0 and fieldset_optional != 1 %}
      <span{{ legend_span.attributes.addClass(legend_span_classes) }}>({{ 'Optional'|t }})</span>
    {% endif %}
  </legend>

  {% if information %}
    <div{{ information.attributes.addClass(information_classes) }}>
      {{ information.content }}
    </div>
  {%  endif %}

  <div class="form-columns">
    <div class="form-item-column">
      {% if prefix %}
        <span class="field-prefix">{{ prefix }}</span>
      {% endif %}
      {{ children }}
      {% if suffix %}
        <span class="field-suffix">{{ suffix }}</span>
      {% endif %}
    </div>

    {% if errors %}
      <div class="form-item-column">
        <div class="field-message error">
          {{ errors }}
          <div class="accolade"></div>
        </div>
      </div>
    {% endif %}
  </div>
</fieldset>
