{% extends 'node--detail--layout.html.twig' %}

{% block article_content %}
  {{ title_prefix }}
    <h1{{ title_attributes }}>
      {{ label }}
    </h1>
  {{ title_suffix }}

  {{ content.field_summary }}

  <aside class="summary-box">
    <div class="summary-box-content">
      <ul class="icon-list">
        <li>
          <i class="icon-calendar" aria-hidden="true"></i>
          <span>
            {% if content.field_event_date_textual|render|striptags|trim is not empty %}
              {{ content.field_event_date_textual }}
            {% else %}
              {{ content.field_event_date }}
            {% endif %}
          </span>
        </li>
        {% if content.field_event_location|render|striptags|trim is not empty %}
          <li>
            <i class="icon-marker" aria-hidden="true"></i>
            <span>
              {{ content.field_event_location }}
            </span>
          </li>
        {% endif %}
      </ul>

      {% if content.field_event_subscription_link|render|striptags|trim is not empty %}
        <div class="accolade bottom center"></div>
      {% endif %}

    </div>

    {{ content.field_event_subscription_link }}
  </aside>

  {{ content.field_paragraphs }}
{% endblock %}

{% block article_aside %}
  {{ parent() }}

  <p class="info-page--edit-date">{{ dateChanged }}</p>
{% endblock %}
